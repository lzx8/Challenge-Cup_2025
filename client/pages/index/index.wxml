<!--index.wxml-->
<view class='container'>
  <!-- 首页头部已移除搜索栏 -->
  <!-- 首页轮播图 -->
  <view class="bannerSwiper">
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true">
      <block wx:for="{{bannerUrls}}" wx:key="index">
        <swiper-item>
          <image src="{{item}}" mode="aspectFill" class="banner-img" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 首页主展示图片，热点区域跳转到各自网页 -->
  <view class="main-img-hot">
    <image src="/assets/首页.png" class="main-img" mode="widthFix" />
    <!-- 热区：彭家寨 -->
    <cover-view class="hot-spot spot-pengjiazai" bindtap="goPengjiazai" style="position: absolute; left: 27rpx; top: 991rpx; width: 335rpx; display: block; box-sizing: border-box; height: 475rpx"></cover-view>
